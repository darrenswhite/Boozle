<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/players_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/new_player_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:choiceMode="singleChoice"
        android:clickable="false"/>

    <Button
        android:id="@+id/new_player_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@color/primary_background"
        android:onClick="newPlayer"
        android:text="@string/add_player"
        android:textColor="@color/primary_text"/>
</RelativeLayout><!-- From: file:/D:/Users/Darren/StudioProjects/Boozle/app/src/main/res/layout/fragment_players.xml -->