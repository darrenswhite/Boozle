<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BoozleTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/BoozleActionBar</item>
        <item name="android:checkboxStyle">@style/BoozleCheckBox</item>
        <item name="android:colorPrimary">@color/primary_background</item>
        <item name="android:colorPrimaryDark">@color/primary_background_dark</item>
        <item name="colorAccent">@color/primary_background</item>
        <item name="android:listViewStyle">@style/BoozleListView</item>
        <item name="android:textColorPrimary">@color/tertiary_text</item>
        <item name="android:textViewStyle">@style/BoozleTextView</item>
        <item name="android:windowBackground">@color/secondary_background</item>
    </style>

    <style name="BoozleActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:windowBackground">@color/primary_background</item>
    </style>

    <style name="BoozleCheckBox" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="BoozleListView" parent="@android:style/Widget.Material.ListView">
        <item name="android:background">@color/secondary_background</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:dividerHeight">1sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BoozleTextView" parent="@android:style/Widget.Material.TextView">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>
</resources>